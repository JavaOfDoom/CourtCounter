<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#cc0000</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#000088</item>
        <!-- Text color for the app -->
        <item name="android:textColorPrimary">#FFF</item>
        <!-- Font family for all text in the app -->
        <item name="android:textViewStyle">@font/libre_franklin_bold</item>
        <item name="fontFamily">@font/libre_franklin_bold</item>
    </style>
    <!-- Style for the inning label and counter -->
    <style name="inningTracking">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>
    <!-- Style for the custom spinners -->
    <style name="spinnerChoices">
        <item name="android:textColor">#FFF</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textViewStyle">@font/libre_franklin_bold</item>
    </style>
    <!-- Style for the textviews that label the different metrics that are being tracked -->
    <style name="metricLabels">
        <item name="android:textSize">20sp</item>
        <item name="android:textViewStyle">@font/libre_franklin_black</item>
        <item name="android:textColor">#000088</item>
        <item name="android:background">#cc0000</item>
    </style>
    <!-- Style for the metrics that are being tracked -->
    <style name="trackedMetrics">
        <item name="android:textColor">#FFF</item>
        <item name="android:textViewStyle">@font/libre_franklin_bold</item>
        <item name="android:textSize">52sp</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">0.01</item>
        <item name="android:shadowColor">#000</item>
    </style>
</resources>
